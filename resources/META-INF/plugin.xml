<idea-plugin>
  <id>com.nexxspace.tools.intellij.plugin.jsontoggler</id>
  <name>Json Converter</name>
  <version>1.0</version>
  <vendor email="peter.yu@nexxspace.com" url="http://www.nexxspace.com">Nexxspace Inc.</vendor>

  <description><![CDATA[
      Toggle selected text between JSON and Javascript objects.
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action id="NexxspaceTools.JsonToggler"
            class="com.nexxspace.tools.JsonTogglerAction"
            text="Toggle _JSON"
            description="Toggle selected text between JSON and Javascript objects.">
      <add-to-group group-id="EditorPopupMenu" anchor="last"  />
    </action>
  </actions>

</idea-plugin>